<!-- Begin Header -->
<div class="header-wrapper opacity">
	<div class="header">
		<!-- Begin Logo -->
		<div class="logo">
		     <% if (typeof user_fname != 'undefined') { %>
		    	<h2>Welcome, <%= user_fname %><h2>
		    <% } else { %>
		    	Welcome
		    <% } %>
	    </div>
		<!-- End Logo -->
		<!-- Begin Menu -->
		<div id="menu-wrapper">
			<div id="menu" class="menu">
				<ul id="tiny">
					<li class="active"><a href="profile">Home</a>
					<% if (typeof user_member_id != 'undefined') { %>
					<li><a href="/user_logout">Logout</a></li>
				<% } else { %>
				<% } %>
				</ul>
			</div>
		</div>

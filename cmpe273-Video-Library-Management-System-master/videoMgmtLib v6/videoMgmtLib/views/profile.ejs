		<!-- End Menu -->
	</div>
</div>
<!-- End Header -->
<!-- Begin Wrapper -->
<div class="wrapper"><!-- Begin Intro -->
<div class="intro"> VIDEO LIBRARY MANAGEMENT SYSTEM </div>

<% if(typeof message !== 'undefined') { %>
<div class="info-box"><%=message%></div>
<% } else { %>
<% } %>
	
<ul class="social">
<li><a class="rss" href="#"></a></li><li><a class="facebook" href="#"></a></li><li><a class="twitter" href="#"></a></li><li><a class="pinterest" href="#"></a></li><li><a class="dribbble" href="#"></a></li><li><a class="flickr" href="#"></a></li><li><a class="linkedin" href="#"></a></li></ul><!-- End Intro --> 

<!-- Begin Blog Grid -->
<div class="box">
<% if (typeof user_fname != 'undefined') { %>
			<h2 class="title"><h2>Member Details</a></h2><br><br>
			<% for (var i in member_details) { %>
			
				<h3>Full Name : <%=member_details[i].first_name%> <%=member_details[i].last_name%><br></h3>
				<h3>Email : <%=member_details[i].EMAIL%><br></h3>
				<h3>User Type : <%=member_details[i].type_of_user%><br></h3>
				<h3>Account Balance : $<%=member_details[i].balance%> <br></h3>
				<h3>Street Address : <%=member_details[i].street%> <br></h3>
				<h3>City : <%=member_details[i].city%> <br></h3>
				<h3>State : <%=member_details[i].state%> <br></h3>
				<h3>Zipcode : <%=member_details[i].zipcode%> <br></h3>
				
			<% } %>
			<% if (typeof available != 'undefined') { %>
			<h3>Number of movies you can rent now : <%=available%> <br></h3>
			<% } else { %>
			<% } %>
			
			<a id="editOption" href="/changepass" class="button yellow">Change Password</a> <br><br>
			
			<h2>Movie History</h2>

	
	<% if (movie_details.length >= 1) { %>		
	
	<center><h2>Movie Rented in the Past</h2>	</center>
		<table>
			<tr>
				<th>Transaction ID</th>
				<th>Movie Name</th>
				<th>Movie Banner</th>
				<th>Movie Release Date</th>
				<th>Rent Amount</th>
				<th>IsReturned</th>
			</tr>
			<% for (var i in movie_details) {  %>
			<tr>
				<td><%=movie_details[i].transaction_id%></td>
				<td><%=movie_details[i].movie_name%></td>
				<td><%=movie_details[i].movie_banner%></td>
				<td><%=movie_details[i].release_date%></td>
				<td><%=movie_details[i].rent_amount%></td>
				<% if (movie_details[i].is_returned == 1) { %>
					<td><b>Pending</b></td>
				<% } else { %>
					<td>Returned</td>
				<% } %>
			</tr>
			<% } %>
		</table>
	<% } else { %>
		<h6> No Movie History to Display </h6>
	<% } %>
	<% } else { %>
	<% } %>
		</div>
		<!-- End Image Format -->

 	
			<!-- Begin Footer -->
